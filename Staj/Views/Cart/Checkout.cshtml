@using Staj.Models
@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>SİPARİŞ BİLGİLERİ</h2>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(x => x.Username, new { Value = User.Identity.Name })
                <div class="form-group">
                    <label>Kullanıcı Adı:</label>
                    <span>@User.Identity.Name</span>
                </div>
                <div class="form-group">
                    <label>Adres Başlığı</label>
                    @Html.TextBoxFor(x => x.AddressTitle, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Şehir</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İlçe</label>
                    @Html.TextBoxFor(x => x.District, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mahalle</label>
                    @Html.TextBoxFor(x => x.Neighborhood, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Posta Kodu</label>
                    @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Ödeme Bilgilerine Geç</button>
                    <a href="/Cart" class="btn btn-warning"><i class="fa fa-chevron-left" aria-hidden="true"></i> Geri Dön</a>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
